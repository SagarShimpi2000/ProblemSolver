using System;

public class HelloWorld
{
    public static void Main(string[] args)
    {
        
        int n= 5;
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(i==j || i+j==n-1)
                {
                    Console.Write("*");
                }
                else
                {
                    Console.Write(" ");
                }
            }
            Console.WriteLine();
            
        }
    }
}
